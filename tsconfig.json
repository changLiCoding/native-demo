{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"baseUrl": ".",
		"paths": {
			"@assets/*": ["./assets/*"],
			"@components/*": ["./components/*"],
			"@constants/*": ["./constants/*"],
			"@app/*": ["./app/*"],
			"@hooks/*": ["./hooks/*"],
			"@styles/*": ["./styles/*"]
		}
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"**/*.d.ts",
		".expo/types/**/*.ts",
		"expo-env.d.ts",
		"app/_layout.js",
		"constants/**/*",
		"styles",
		"components/common/header/ScreenHeaderBtn.jsx",
		"app/index.jsx"
	]
}
