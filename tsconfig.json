{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"paths": {
			"@assets/*": ["./assets/*"],
			"@constants/*": ["./constants/*"],
			"@components/*": ["./components/*"]
		}
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"**/*.d.ts",
		".expo/types/**/*.ts",
		"expo-env.d.ts",
		"app/_layout.js",
		"constants/**/*",
		"styles"
	]
}
